#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT  0
#define LAYER1 1
#define LAYER2 2
#define BT_CTRL  3

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
    &kp TAB   &kp Q     &kp W    &kp E     &kp R       &kp T           &kp Y        &kp U        &kp I     &kp O     &kp P    &kp BSPC
    &kp ESC   &kp A     &kp S    &kp D     &kp F       &kp G           &kp H        &kp J        &kp K     &kp L     &kp SEMI &kp ENTER
    &kp LSHFT &kp Z     &kp X    &kp C     &kp V       &kp B           &kp N        &kp M        &kp COMMA &kp DOT   &kp FSLH &kp SQT
    &kp LCTRL &kp LGUI  &kp LALT &kp BSLH  &kp SPACE   &mo LAYER1      &mo LAYER2  &kp RALT     &kp LEFT  &trans &trans   &kp RCTRL
            >;
        };

        layer1 {
            bindings = <
    &kp GRAVE &kp N7    &kp N8   &kp N9   &trans      &trans     &trans    &trans      &trans    &trans    &trans   &kp DEL
    &kp TAB   &kp N4    &kp N5   &kp N6   &kp F4      &kp F5     &kp F6    &kp MINUS   &kp PG_UP &kp LBKT  &kp RBKT &kp BSLH
    &kp LSHFT &kp N1    &kp N2   &kp N3   &kp F10     &kp F11    &kp F12   &kp EQUAL   &kp PG_DN &kp HOME  &kp END  &kp ENTER
    &kp LCTRL &kp LGUI  &kp LALT &reset   &to DEFAULT &kp SPACE  &trans    &mo BT_CTRL &kp LEFT  &kp RIGHT &kp UP   &kp DOWN
            >;
        };
        
        layer2 {
            bindings = <
    &kp GRAVE  &trans       &trans       &trans       &trans       &trans       &trans    &trans    &trans     &trans     &trans   &trans
    &trans     &trans       &trans       &trans       &trans       &trans       &trans    &trans    &trans     &trans     &trans   &trans
    &trans     &trans       &trans       &trans       &trans       &trans       &trans    &trans    &trans     &trans     &trans   &trans
    &trans     &trans       &trans       &trans       &trans       &trans       &trans    &trans    &trans     &trans     &trans   &trans
            >;
        };        

        bt_control {
            bindings = <
    &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &trans    &trans    &trans     &trans     &trans   &trans
    &trans     &trans       &trans       &trans       &trans       &trans       &trans    &trans    &trans     &trans     &trans   &trans
    &trans     &trans       &trans       &trans       &trans       &trans       &trans    &trans    &trans     &trans     &trans   &trans
    &trans     &trans       &trans       &trans       &trans       &trans       &trans    &trans    &bt BT_PRV &bt BT_NXT &trans   &trans
            >;
        };
    };
};
